{
    "version":                "2.0.0",
    "compileOnSave":          false,
    "compilerOptions":        {
        "outDir":                 "./dist/release",
        "target":                 "es5",
        "sourceMap":              false,
        "emitDecoratorMetadata":  true,
        "experimentalDecorators": true,
        "removeComments":         false,
        "moduleResolution":       "node",
        "declaration":            true,
        "module":                 "commonjs",
        "lib":                    [
            "es5",
            "dom",
            "es2015"
        ],
        "types":                  [
            "jasmine",
            "node"
        ],
        "baseUrl":                ".",
        "rootDir":                ".",
        "paths":                  {
            "@redux-observable-decorator": ["./"]
        }
    },
    "exclude":                [
        "node_modules",
        "dist",
        "tests.bundle.ts"
    ],
    "angularCompilerOptions": {
        "genDir": ".ngc"
    },
    "types":                  [
        "jasmine",
        "node"
    ]
}